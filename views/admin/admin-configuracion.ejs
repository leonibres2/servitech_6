    <!-- Modal Agregar Configuración -->
    <div class="modal" id="configModal">
      <div class="modal-content">
        <div class="modal-header">
          <h2>Agregar nueva configuración</h2>
          <button class="btn-close"><i class="fas fa-times"></i></button>
        </div>
        <div class="modal-body">
          <form id="configForm">
            <div class="form-row">
              <div class="form-group">
                <label for="configKey">Clave <span class="required">*</span></label>
                <div class="input-with-icon">
                  <i class="fas fa-key"></i>
                  <input type="text" id="configKey" class="form-control" placeholder="Ej: site_name" required />
                </div>
              </div>
              <div class="form-group">
                <label for="configGroup">Grupo <span class="required">*</span></label>
                <div class="input-with-icon">
                  <i class="fas fa-layer-group"></i>
                  <select id="configGroup" class="form-control" required>
                    <option value="general">General</option>
                    <option value="apariencia">Apariencia</option>
                    <option value="email">Correo Electrónico</option>
                    <option value="integraciones">Integraciones</option>
                    <option value="seguridad">Seguridad</option>
                    <option value="otro">Otro</option>
                  </select>
                </div>
              </div>
            </div>
            <div class="form-group">
              <label for="configValue">Valor <span class="required">*</span></label>
              <div class="input-with-icon">
                <i class="fas fa-edit"></i>
                <input type="text" id="configValue" class="form-control" placeholder="Valor de la configuración" required />
              </div>
              <div class="form-hint" id="valueHint">
                Ingresa el valor para esta configuración
              </div>
            </div>
            <div class="form-group">
              <label for="configDescription">Descripción</label>
              <div class="input-with-icon">
                <i class="fas fa-info-circle"></i>
                <textarea id="configDescription" class="form-control" rows="3" placeholder="Descripción breve de esta configuración"></textarea>
              </div>
            </div>
            <div class="form-row">
              <div class="form-group">
                <label for="configType">Tipo de valor</label>
                <div class="input-with-icon">
                  <i class="fas fa-code"></i>
                  <select id="configType" class="form-control">
                    <option value="text">Texto</option>
                    <option value="number">Número</option>
                    <option value="boolean">Booleano</option>
                    <option value="json">JSON</option>
                    <option value="color">Color</option>
                    <option value="file">Archivo</option>
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label for="configStatus">Estado</label>
                <div class="toggle-switch-container">
                  <span class="toggle-label">Inactivo</span>
                  <label class="toggle-switch">
                    <input type="checkbox" id="configStatusToggle" checked />
                    <span class="toggle-slider"></span>
                  </label>
                  <span class="toggle-label">Activo</span>
                  <input type="hidden" id="configStatus" value="active" />
                </div>
              </div>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button class="btn-outline" data-dismiss="modal">Cancelar</button>
          <button class="btn-primary" id="saveConfig">
            <i class="fas fa-save"></i>
            <span>Guardar configuración</span>
          </button>
        </div>
      </div>
    </div>

