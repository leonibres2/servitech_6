        <div class="admin-mensajes__modal-content">
            <div class="admin-mensajes__modal-header">
                <h2 class="admin-mensajes__modal-title">Nuevo mensaje</h2>
                <button class="btn-close"><i class="fas fa-times"></i></button>
            </div>
            <div class="admin-mensajes__modal-body">
                <form id="composeForm">
                    <div class="admin-mensajes__modal-group">
                        <label class="admin-mensajes__modal-label">Para</label>
                        <input type="text" id="messageTo" placeholder="Ingresa destinatarios" class="admin-mensajes__modal-input">
                    </div>
                    <div class="admin-mensajes__modal-grid">
                        <div>
                            <label class="admin-mensajes__modal-label">CC</label>
                            <input type="text" id="messageCc" placeholder="Copia a" class="admin-mensajes__modal-input">
                        </div>
                        <div>
                            <label class="admin-mensajes__modal-label">CCO</label>
                            <input type="text" id="messageBcc" placeholder="Copia oculta a" class="admin-mensajes__modal-input">
                        </div>
                    </div>
                    <div class="admin-mensajes__modal-group">
                        <label class="admin-mensajes__modal-label">Asunto</label>
                        <input type="text" id="messageSubject" placeholder="Asunto del mensaje" class="admin-mensajes__modal-input">
                    </div>
                    <div class="admin-mensajes__modal-group">
                        <label class="admin-mensajes__modal-label">Mensaje</label>
                        <textarea id="messageBody" rows="10" placeholder="Escribe tu mensaje aquí" class="admin-mensajes__modal-input admin-mensajes__modal-textarea"></textarea>
                    </div>
                    <div class="admin-mensajes__modal-group">
                        <label class="admin-mensajes__modal-label">Adjuntos</label>
                        <div class="admin-mensajes__modal-upload-wrapper">
                            <input type="file" id="messageAttachments" class="admin-mensajes__modal-file-input" multiple>
                            <div class="admin-mensajes__modal-upload-box">
                                <i class="fas fa-paperclip"></i>
