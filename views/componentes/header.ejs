    <nav class="navbar">
        <!-- Botón para mostrar/ocultar menú en móvil -->
        <div class="mobile-menu-toggle" id="mobileMenuToggle">
            <i class="fas fa-bars"></i> <!-- Icono menú hamburguesa -->
