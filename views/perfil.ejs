<!DOCTYPE html>
<!-- Declaración del tipo de documento HTML5 -->

<html lang="es">
<!-- Inicio del documento HTML en español -->

<head>
  <!-- Metadatos y enlaces a recursos externos -->
  <meta charset="UTF-8" />
  <!-- Codificación de caracteres UTF-8 -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <!-- Diseño responsivo para dispositivos móviles -->
  <title>Mi Perfil | Servitech</title>
  <!-- Título de la pestaña del navegador -->
  <link rel="stylesheet" href="/assets/css/base.css" />
  <!-- Estilos base de la aplicación -->
  <link rel="stylesheet" href="/assets/css/perfil.css" />
  <!-- Estilos específicos para la página de perfil -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <!-- Iconos de Font Awesome -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  <!-- Fuente Inter para mejorar la tipografía -->
</head>

<body>
  <!-- Cuerpo principal de la página -->

  <!-- Header: barra superior de navegación -->
  <%- include('componentes/header') %>

    <main class="container">
      <!-- Contenedor principal de la página -->

      <section class="perfil-section">
        <h1 class="perfil-title">Mi Perfil</h1>
        <!-- Título principal de la sección de perfil -->

        <div class="perfil-card">
          <!-- Tarjeta principal de perfil -->
          <div class="perfil-avatar">
            <img src="https://ui-avatars.com/api/?name=Usuario&background=3a8eff&color=fff" alt="Usuario"
              id="profileAvatar">
            <!-- Imagen de avatar del usuario -->
            <button class="change-avatar-btn">
              <i class="fas fa-camera"></i>
            </button>
          </div>
          <div class="perfil-info">
            <h2 id="userName">Nombre del Usuario</h2>
            <!-- Nombre del usuario -->
            <p id="userEmail">correo@ejemplo.com</p>
            <!-- Email del usuario -->
            <div class="perfil-actions">
              <a href="/editar-perfil.html" class="btn btn-primary">
                <i class="fas fa-edit"></i> Editar perfil
              </a>
              <!-- Botón para editar perfil -->
              <a href="/mis-asesorias.html" class="btn btn-outline">
                <i class="fas fa-calendar-alt"></i> Mis asesorías
              </a>
              <!-- Botón para ver asesorías -->
            </div>
          </div>
        </div>
        <!-- Sección adicional de información -->
        <div class="perfil-details">
          <!-- Detalles adicionales del usuario -->
          <!-- ... -->
        </div>
      </section>
    </main>

    <!-- Footer: pie de página con información adicional -->
    <%- include('componentes/footer') %>

      <script src="/assets/js/common.js"></script>
      <!-- Script común para funcionalidades generales -->
      <script src="/assets/js/perfil.js"></script>
      <!-- Script específico para la página de perfil -->
</body>

</html>
<div class="profile-plan">
  <div class="plan-badge free">Básico</div>
  <div class="plan-features">
    <div class="plan-feature">
      <i class="fas fa-check"></i> Acceso a expertos
    </div>
    <div class="plan-feature">
      <i class="fas fa-check"></i> Chat con asesores
    </div>
    <div class="plan-feature inactive">
      <i class="fas fa-times"></i> Prioridad de atención
    </div>
    <div class="plan-feature inactive">
      <i class="fas fa-times"></i> Descuentos en asesorías
    </div>
  </div>
  <button class="btn btn-upgrade">
    <i class="fas fa-crown"></i> Mejorar plan
  </button>
</div>
</div>
</div>

<div class="profile-main">
  <div class="profile-tab" id="personalInfo">
    <h2>Información personal</h2>

    <form class="profile-form">
      <div class="form-row">
        <div class="form-group">
          <label for="firstName">Nombre</label>
          <input type="text" id="firstName" value="" placeholder="Tu nombre" disabled>
        </div>
        <div class="form-group">
          <label for="lastName">Apellido</label>
          <input type="text" id="lastName" value="" placeholder="Tu apellido" disabled>
        </div>
      </div>

      <div class="form-group">
        <label for="profileEmail">Email</label>
        <input type="email" id="formEmail" value="" placeholder="tucorreo@ejemplo.com" disabled>
      </div>

      <div class="form-row">
        <div class="form-group">
          <label for="phone">Teléfono</label>
          <input type="tel" id="phone" placeholder="Añadir número de teléfono" disabled>
        </div>
        <div class="form-group">
          <label for="location">Ciudad</label>
          <input type="text" id="location" placeholder="Añadir ciudad" disabled>
        </div>
      </div>

      <div class="form-group">
        <label for="aboutMe">Sobre mí</label>
        <textarea id="aboutMe" rows="4" placeholder="Cuéntanos sobre ti..." disabled></textarea>
      </div>

      <h3>Preferencias de contacto</h3>

      <div class="toggle-group">
        <span>Recibir notificaciones por email</span>
        <label class="toggle">
          <input type="checkbox" checked>
          <span class="toggle-slider"></span>
        </label>
      </div>

      <div class="toggle-group">
        <span>Recibir notificaciones para nuevos expertos</span>
        <label class="toggle">
          <input type="checkbox" checked>
          <span class="toggle-slider"></span>
        </label>
      </div>

      <div class="toggle-group">
        <span>Recibir recordatorios de asesorías</span>
        <label class="toggle">
          <input type="checkbox" checked>
          <span class="toggle-slider"></span>
        </label>
      </div>
    </form>
  </div>
</div>
</div>
</main>
<!-- Footer -->
<%- include('componentes/footer') %>
  <script src="/assets/js/common.js"></script>
  <script src="/assets/js/perfil.js"></script>
  </body>

  </html>
  </body>

  </html>